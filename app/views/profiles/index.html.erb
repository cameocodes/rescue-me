<p id="notice"><%= notice %></p>

<h1>Profiles</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Contact number</th>
      <th>Suburb</th>
      <th>State</th>
      <th>Postcode</th>
      <th>Rescue</th>
      <th>Rescue name</th>
      <th>Rescue email</th>
      <th>About rescue</th>
      <th>Adoption details</th>
      <th>Website url</th>
      <th>Logo image</th>
      <th>Looking for fosters</th>
      <th>Taking surrenders</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= profile.user %></td>
        <td><%= profile.first_name %></td>
        <td><%= profile.last_name %></td>
        <td><%= profile.contact_number %></td>
        <td><%= profile.suburb %></td>
        <td><%= profile.state %></td>
        <td><%= profile.postcode %></td>
        <td><%= profile.rescue %></td>
        <td><%= profile.rescue_name %></td>
        <td><%= profile.rescue_email %></td>
        <td><%= profile.about_rescue %></td>
        <td><%= profile.adoption_details %></td>
        <td><%= profile.website_url %></td>
        <td><%= profile.logo_image %></td>
        <td><%= profile.looking_for_fosters %></td>
        <td><%= profile.taking_surrenders %></td>
        <td><%= link_to 'Show', profile %></td>
        <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
        <td><%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Profile', new_profile_path %>
